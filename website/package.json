{
	"name": "website-svelte",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"prebuild": "node scripts/validate-build-env.js",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "npm run check",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:e2e": "E2E_AUTO_SERVER=1 playwright test",
		"test:e2e:docker": "playwright test",
		"test:e2e:ui": "E2E_AUTO_SERVER=1 playwright test --ui",
		"test:e2e:debug": "E2E_AUTO_SERVER=1 playwright test --debug",
		"test:e2e:headed": "E2E_AUTO_SERVER=1 playwright test --headed",
		"test:e2e:clean": "E2E_AUTO_SERVER=1 ./tests/e2e/cleanup-test-data.sh && playwright test"
	},
	"devDependencies": {
		"@playwright/test": "^1.56.1",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/postcss": "^4.1.17",
		"@testing-library/svelte": "^5.2.6",
		"@types/node": "^24.10.1",
		"@vitest/ui": "^3.1.2",
		"autoprefixer": "^10.4.21",
		"buffer": "^6.0.3",
		"dotenv": "^17.2.3",
		"jsdom": "^26.0.0",
		"postcss": "^8.5.6",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"vite": "^7.1.10",
		"vite-plugin-node-polyfills": "^0.24.0",
		"vitest": "^3.1.2"
	},
	"dependencies": {
		"@dfinity/agent": "^3.4.2",
		"@dfinity/auth-client": "^3.4.2",
		"@dfinity/candid": "^3.4.2",
		"@dfinity/identity": "^3.4.2",
		"@dfinity/principal": "^3.4.2",
		"@ic-pay/icpay-sdk": "^1.4.19",
		"@ic-pay/icpay-widget": "^1.2.52",
		"@noble/curves": "^1.9.2",
		"@noble/ed25519": "^3.0.0",
		"@noble/hashes": "^1.8.0",
		"@stripe/stripe-js": "^8.5.3",
		"bip39": "^3.1.0",
		"clsx": "^2.1.1",
		"dexie": "^4.2.1",
		"tailwind-merge": "^3.4.0"
	}
}
