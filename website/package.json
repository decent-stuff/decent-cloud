{
  "name": "decent-cloud-website",
  "version": "0.2.1",
  "private": true,
  "scripts": {
    "prebuild": "node -e \"try { require('next'); } catch (e) { console.log('Next.js not found. Installing globally...'); require('child_process').execSync('npm install -g next', { stdio: 'inherit' }); }\" && cd ../wasm && npm run build",
    "predev": "node -e \"try { require('next'); } catch (e) { console.log('Next.js not found. Installing globally...'); require('child_process').execSync('npm install -g next', { stdio: 'inherit' }); }\" && cd ../wasm && npm run build",
    "dev": "next dev",
    "dev:watch": "concurrently \"nodemon --watch ../wasm/src --watch ../wasm/*.ts --watch ../wasm/*.js --ext rs,ts,js --exec 'cd ../wasm && npm run build'\" \"next dev\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "eslint": "npx eslint \"lib/**/*.ts\" \"app/**/*.tsx\" \"components/**/*.tsx\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "pages:build": "npx @cloudflare/next-on-pages",
    "preview": "npm run pages:build && wrangler pages dev",
    "deploy": "npm run pages:build && wrangler pages deploy --project-name=website --branch=preview",
    "prepare": "",
    "prepublishOnly": "npm test"
  },
  "dependencies": {
    "@decent-stuff/dc-client": "file:../wasm/dist",
    "@dfinity/agent": "^2.4.1",
    "@dfinity/auth-client": "^2.4.1",
    "@dfinity/candid": "^2.4.1",
    "@dfinity/identity": "^2.4.1",
    "@dfinity/principal": "^2.4.1",
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@monaco-editor/react": "^4.7.0",
    "@nfid/identitykit": "^1.0.13",
    "@noble/ed25519": "^2.2.3",
    "@noble/hashes": "^1.8.0",
    "@radix-ui/react-dialog": "^1.1.11",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@tailwindcss/postcss": "^4.1.4",
    "@types/js-yaml": "^4.0.9",
    "bip39": "^3.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dexie": "^4.0.11",
    "dexie-react-hooks": "^1.1.7",
    "framer-motion": "12.18.1",
    "js-yaml": "^4.1.0",
    "lucide-react": "0.522.0",
    "monaco-editor": "^0.52.2",
    "next": "^15.4.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-simple-typewriter": "^5.0.1",
    "svelte-motion": "^0.12.2",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.13",
    "@eslint/js": "^9.29.0",
    "@next/eslint-plugin-next": "^15.3.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.0",
    "eslint-config-next": "^15.3.1",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "nodemon": "^3.1.7",
    "postcss": "^8.5.6",
    "process": "^0.11.10",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "wrangler": "^4.26.1"
  }
}
