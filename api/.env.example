#DKIM_DOMAIN=yourdomain.com
#DKIM_SELECTOR=mailchannels
#DKIM_PRIVATE_KEY=base64_encoded_private_key

# Email Processing Configuration (optional)
#EMAIL_PROCESSOR_INTERVAL_SECS=30
