# Chatwoot configuration
# Copy to chatwoot.env and fill in values
# See: https://www.chatwoot.com/docs/self-hosted/configuration/environment-variables/

# Required: Generate with `openssl rand -hex 64`
SECRET_KEY_BASE=

# Frontend URL (your Chatwoot domain)
FRONTEND_URL=https://support.decent-cloud.org

# Disable public signups (agents created via API only)
ENABLE_ACCOUNT_SIGNUP=false

# Redis
REDIS_URL=redis://chatwoot-redis:6379
REDIS_PASSWORD=

# PostgreSQL (use existing cluster or external DB)
POSTGRES_HOST=
POSTGRES_PORT=5432
POSTGRES_DATABASE=chatwoot_production
POSTGRES_USERNAME=chatwoot
POSTGRES_PASSWORD=

# Email (SMTP)
MAILER_SENDER_EMAIL=support@decent-cloud.org
SMTP_DOMAIN=decent-cloud.org
SMTP_ADDRESS=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=true

# AI features (optional - BYOK)
OPENAI_API_KEY=

# Disable telemetry
DISABLE_TELEMETRY=true

# Logging
RAILS_LOG_TO_STDOUT=true
LOG_LEVEL=info
